{
  "manifest_version": 2,
  "name": "LinQR",
  "version": "0.1",
  "description": "Toggle to show QR codes for hovered links.",
  "permissions": ["tabs", "activeTab"],
  "browser_action": {
    "default_title": "Toggle LinQR"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["qrious.min.js", "content.js"]
    }
  ],
  "icons": {
    "48": "icons/disabled.svg"
  }
}
